@model crud.Models.product

@{
    ViewBag.Title = "Details";
}
 
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/style.css">
    <style type="text/css">
        .l {
            float: left;
            width: 50%;
        }

        .r {
            float: right;
            width: 20%;
        }

          </style>

</head>
<body>

    <div class="wrapper d-flex align-items-stretch">
        <nav id="sidebar">
            <h1><a href="#" class="logo">PRODUCT MANAGEMENT</a></h1>
            <ul class="list-unstyled components mb-5">
                <li class="active">
                    @Html.ActionLink("Product List", "Index", "Home")
                </li>
                <li>
                    @Html.ActionLink("Add Product", "Create", "Home")
                </li>
            </ul>

        </nav>

        <!-- Page Content  -->
        <div id="content" class="p-4 p-md-5 pt-5">


<div class="l"> 
            <h1>Welcome @Session["Username"]</h1>
    </div>



            <div class="r"> 
                <h2>@Html.ActionLink("Logout", "Logout", "User", null, new { @class = "btn btn-primary btn-lg" })</h2>
            </div>


            <div style="margin-top:60px;">
                <h2>Product Details</h2>
                <hr />
                <dl class="dl-horizontal">
                    <dt>Product ID : </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Product_Id)
                    </dd>

                    <dt>Product Name : </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Product_name)
                    </dd>

                    <dt>Category : </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Product_Category)
                    </dd>

                    <dt>Price : </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Product_Price)
                    </dd>

                    <dt>Quantity : </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Product_Quantity)
                    </dd>

                    <dt>Short Description : </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Short_Description)
                    </dd>

                    <dt>Long Description : </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Long_Description)
                    </dd>

                    <dt>Small Image : </dt>

                    <dd>
                        <img src="@Url.Content(Session["image1"].ToString())" height="130" width="130" />
                    </dd>

                    <dt>Large Image : </dt>

                    <dd>
                        <img src="@Url.Content(Session["image2"].ToString())" height="130" width="130" />

                    </dd>

                </dl>
            </div>
            <p>
                @Html.ActionLink("Edit", "Edit", new { id = Model.Product_Id }) ||
                @Html.ActionLink("Product List", "Index")
            </p>






        </div>

        <script src="~/js/jquery.min.js"></script>
        <script src="~/js/popper.js"></script>
        <script src="~/js/bootstrap.min.js"></script>
        <script src="~/js/main.js"></script>
</body>
</html>



 